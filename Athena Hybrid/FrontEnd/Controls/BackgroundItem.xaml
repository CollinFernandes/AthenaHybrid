<UserControl x:Class="Athena_Hybrid.FrontEnd.Controls.BackgroundItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Athena_Hybrid.FrontEnd.Controls"
             mc:Ignorable="d" 
             Height="85" Width="220">
    <UserControl.Resources>
        <FontFamily x:Key="MontserratBold">/Fonts/#Montserrat Bold</FontFamily>
        <FontFamily x:Key="MontserratMedium">/Fonts/#Montserrat Medium</FontFamily>
        <FontFamily x:Key="MontserratSemiBold">/Fonts/#Montserrat SemiBold</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Border Cursor="Hand" Background="#18191d" BorderBrush="#272932" BorderThickness="3" CornerRadius="1" RenderTransformOrigin="0.5,0.5" Margin="0,5,0,0">
            <Grid>
                <Border BorderThickness="1" CornerRadius="0.5" BorderBrush="#272932" Margin="4,18,138,23">
                    <Image x:Name="backgroundImage"/>
                </Border>
                <TextBlock FontFamily="{StaticResource MontserratSemiBold}" TextWrapping="Wrap" x:Name="creatorText" Text="From fluffy" Foreground="White" FontSize="14" Margin="91,25,10,23"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
